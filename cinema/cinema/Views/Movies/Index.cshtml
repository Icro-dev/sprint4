@using cinema.Models
@model IEnumerable<cinema.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">   


 @section Styles
{
    <link rel="stylesheet" href="~/css/movieIndex.css" asp-append-version="true"/>
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="movie-container">
@foreach (var item in Model) 
{
                <div class="one-movie-container">
                <div class="poster-image">
                <img src= "@Html.DisplayFor(modelItem => item.Poster)" alt="Sample Image" style="height:500px;width:300px;"/>
                </div>
                <div class="movie-info">
                <div class="border">
                @Html.DisplayName("Name:")
                @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="border">
                @Html.DisplayName("Description:")
                @Html.DisplayFor(modelItem => item.Description)
                </div>
                <div class="border">
                @Html.DisplayName("Director:")
                @Html.DisplayFor(modelItem => item.Director)
                </div>
                <div class="border">
                @Html.DisplayName("Cast:")
                @Html.DisplayFor(modelItem => item.Cast)
                </div>
                <div class="border">
                @Html.DisplayName("Release Year:")
                @Html.DisplayFor(modelItem => item.ReleaseYear)
                </div>
                <div class="border">
                @Html.DisplayName("Country Of Origin:")
                @Html.DisplayFor(modelItem => item.CountryOfOrigin)
                </div>
                <div class="border">
                @Html.DisplayName("Length:")
                @Html.DisplayFor(modelItem => item.Length)
                </div>
                <div class="border">
                @Html.DisplayName("Genre:")
                @Html.DisplayFor(modelItem => item.Genre)
                </div>
                <div class="border">
                @Html.DisplayName("Language:")
                @Html.DisplayFor(modelItem => item.Language)
                </div>
                <div class="border">
                @Html.DisplayName("3D:")
                @Html.DisplayFor(modelItem => item.ThreeD)
                </div>
            
                <div class="border">
                @Html.DisplayName("Kijkwijzer:")
                        @{
                            var Kijkwijzer = item.Kijkwijzer;
                            List<string> ListKijkwijzer = new List<string>();
                            string[] KwItems = Kijkwijzer.Split(' ');
                            foreach (var KwItem in KwItems) {
                                ListKijkwijzer.Add(KwItem);
                            } 
                      
                            if (ListKijkwijzer.Contains("AL"))
                            {
                            <img src ="~/imagesKijkwijzer/AL.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("12"))
                            {
                            <img src ="~/imagesKijkwijzer/12.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("GT"))
                            {
                            <img src ="~/imagesKijkwijzer/GTG.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("G"))
                            {
                            <img src ="~/imagesKijkwijzer/G.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("A"))
                            {
                            <img src ="~/imagesKijkwijzer/angst.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("16"))
                            {
                            <img src ="~/imagesKijkwijzer/16.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("18"))
                            {
                            <img src ="~/imagesKijkwijzer/18.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("6"))
                            {
                            <img src ="~/imagesKijkwijzer/6.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("D"))
                            {
                            <img src ="~/imagesKijkwijzer/D.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("MG6"))
                            {
                            <img src ="~/imagesKijkwijzer/mg6.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("S"))
                            {
                            <img src ="~/imagesKijkwijzer/S.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                            if (ListKijkwijzer.Contains("DISCR"))
                            {
                            <img src ="~/imagesKijkwijzer/Discr.png" alt="AL" style="height:50px;wid:50px;" />   
                            }
                        }
                      </div>
                    
            
            
                <a asp-action="Edit" asp-route-id="@item.Name">Edit</a>  
                <a asp-action="Details" asp-route-id="@item.Name">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
                  </div>
                 </div>
                      
}
</div>
