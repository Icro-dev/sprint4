@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Betalings overzicht:</h2>

<div>Aantal kaartjes @ViewBag.quantity</div>
<div>Prijs @ViewBag.Price</div>

<h3>Betalen</h3>
<form method="get" asp-action="create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group">
        <input type="submit" value="Betalen" class="btn btn-primary"/>
    </div>
</form>