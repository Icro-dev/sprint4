@model IEnumerable<cinema.Models.MovieReview>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NameOfMovie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NameOfMovie">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NameOfMovie">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
