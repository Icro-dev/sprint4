@model IEnumerable<cinema.Models.Show>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThreeD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Break)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @{
                        var currentTime = DateTime.Now;
                        var startTime = item.StartTime.AddHours(-2);
                        int result = DateTime.Compare(currentTime, startTime);
                        if(result < 0)
                        {
                            var time = item.StartTime.AddHours(-2);
                            var currentTime2 = DateTime.Now;
                            <div>
                   
                            @Html.DisplayFor(modelItem => time);
                            @Html.DisplayFor(modelItem => currentTime2);               
                            </div>
                        }
                    }
                @Html.DisplayFor(modelItem => item.ThreeD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
                    @{
                        string showTime = item.StartTime.ToString("dd:MM:yyyy:HH:mm");
                        <div>
                        <h3>@showTime</h3>
                        </div>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Break)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie)
                @{

                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
