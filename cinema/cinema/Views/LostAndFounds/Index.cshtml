@model IEnumerable<cinema.Models.LostAndFound>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


  @if(@ViewBag.LostObject != null)
  {
            <div class="alert alert-primary" role="alert">
            @ViewBag.LostObject <p>ligt nu meer dan vijf maanden in de lost and found, handig alle objecten die langer dan 5 maanden in de lost and found liggen over aan de authoriteiten en verwijder deze daarna uit het systeem.</p>
            </div>
  }


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LostObject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoundTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetrievedTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LostObject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoundTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetrievedTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
